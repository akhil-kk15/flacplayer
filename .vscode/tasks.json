{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": ["-j$(nproc)"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake",
            "args": [".."],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        }
    ]
}